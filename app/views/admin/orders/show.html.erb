<div class="container">
  <div class="row">
      <div class="col-lg-3"></div>
      <div class="col-lg-8">
          <h1>注文履歴詳細</h1>
          <h4>購入者</h4>
          <%= link_to admin_customer_path(@order.customer.id) do %>
          <%= @order.delivery_name %><br>
          <% end %>
          <h4>注文日</h4><%= @order.created_at.strftime('%Y/%m/%d') %><br>
          <h4>配送先</h4>〒<%= @order.postal_code %><%= @order.address %><br>
          <h4>支払方法</h4><%= @order.payment_method_i18n %><br>
      </div>
  </div>
  <div class="row">
    <div class="col-lg-6">
        <table>
            <thead>
                <th>商品名</th>
                <th>単価（税込）</th>
                <th>数量</th>
                <th>小計</th>
            </thead>
            <tbody>
                <% @order_items.each do |order_item| %>
                <tr>
                    <td><%= order_item.item.name %></td>
                    <td><%= order_item.purchase_price %></td>
                    <td><%= order_item.amount %></td>
                    <td><%= order_item.subtotal %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
    <div class="col-lg-5">
        <h4>商品合計</h4><%= @order.payment_price %>
        <h4>送料</h4><%= @order.delivery_price %>
        <% @total = @order.payment_price + @order.delivery_price %>
        <h4>請求金額合計</h4><%= @total %>
    </div>
  </div>
</div>
