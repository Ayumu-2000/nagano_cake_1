<div class="container">
  <div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-8">
      <h1>注文履歴一覧</h1>
      <table>
        <thead>
          <th>会員ID</th>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.id %></td>
            <td>
              <%= link_to admin_order_path(order.id) do %>
                <%= order.created_at.strftime('%Y/%m/%d') %>
              <% end %>
            </td>
            <td><%= order.delivery_name %></td>
            <td><%= order.order_items.sum(:amount) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
