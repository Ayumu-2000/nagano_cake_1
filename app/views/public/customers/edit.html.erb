<h1>会員情報編集</h1>

<% form_with model: @customer, url: customers_edit_path(@customer.id), method: :patch do |f| %>
  <label for="first_name">名</label><br>
    <%= f.text_field :first_name %>
  <label for="last_name">姓</label><br>
    <%= f.text_field :last_name %>
  <label for="first_name_kana">メイ</label><br>
    <%= f.text_field :first_name_kana %>
  <label for="last_name_kana">セイ</label><br>
    <%= f.text_field :last_name_kana %>
  <label for="postal_code">郵便番号</label><br>
    <%= f.text_field :postal_code %>
  <label for="address">住所</label><br>
    <%= f.text_field :address %>
  <label for="telephone_number">電話番号</label><br>
    <%= f.text_field :telephone_number %>
  <label for="email">メールアドレス</label><br>
    <%= f.text_field :email %>
    <%= f.submit "編集内容を保存" %>
<% end %>
<%= link_to "退会する", customers_out_path(@customer.id), method: :patch  %>
