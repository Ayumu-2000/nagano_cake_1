<div class="container">
  <div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-8">
      <h1><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h1>
      <table>
        <thead>
          <th><strong>登録情報</strong></th>
        </thead>
        <tbody>
          <tr>
            <td><%= link_to "編集する", customers_edit_path %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= @customer.last_name %><%= @customer.first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
            </tr>
            <tr>
              <td>郵便番号</td>
              <td><%= @customer.postal_code %></td>
            </tr>
            <tr>
              <td>住所</td>
              <td><%= @customer.address %></td>
            </tr>
            <tr>
              <td>電話番号</td>
              <td><%= @customer.telephone_number %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= @customer.email %></td>
            </tr>
            <tr>
              <td><strong>注文履歴</strong></td>
              <td><%= link_to "注文履歴一覧を見る", orders_path %></td>
            </tr>
          </tbody>
      </table>
    </div>
  </div>
</div>