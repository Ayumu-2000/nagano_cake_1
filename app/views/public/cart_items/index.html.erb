<h1>ショッピングカート</h1>
<table>
  <thead>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
  </thead>
  <tbody>
    <tr>
      <%= link_to "カートを空にする", cart_items_destroy_all_path(@cart_items), method: :delete %>
    </tr>
  <%  @cart_items.each do |cart_item| %>
    <tr>
      <td><%= cart_item.item.name %></td>
      <td><%= cart_item.item.with_tax_price %></td>
      <td>
        <%= form_with model: cart_item, local: true, method: :patch do |f| %>
           <%= f.select :amount, *[1..3] %>
           <%= f.submit "変更" %>
        <% end %>
      </td>
      <td><%= cart_item.subtotal %></td>
        <% @total = @total + cart_item.subtotal %>
      <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete %></td>
    </tr>
  <% end %>
  <th>合計金額</th>
    <td>
      <%= @total %>
    </td>
    <td><%= link_to "情報入力に進む", orders_new_path %></td>
  </tbody>
</table>
