<h1>商品詳細</h1>
  <%= image_tag @item.get_item_image(100,100) %>
  <h4><%= @item.name %></h4>
  <p><%= @item.introduction %></p>
  <h4>¥ <%= @item.with_tax_price %>（税込）</h4>

  <%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
    <%= f.hidden_field :item_id, :value => @item.id %>
    <%= f.select :amount, *[1..3] %>
    <%= f.submit "カートに入れる" %>
  <% end %>