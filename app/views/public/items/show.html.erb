<h1>商品詳細</h1>
  <%= image_tag @item.get_item_image(100,100) %>
  <h4>商品名</h4>
  <%= @item.name %>
  <h4>商品説明</h4>
  <%= @item.introduction %>
  <h4>税込価格(税抜価格)</h4>
  <%= @item.price %>

  <%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
    <%= f.hidden_field :name, :value => @item.name %>
    <%= f.hidden_field :price, :value => @item.price %>
    <%= f.select :amount, *[1..3] %>
    <%= f.submit "カートに入れる" %>
  <% end %>